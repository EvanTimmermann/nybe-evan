@model  NYBE.Models.SchoolViewModels.PendingSchoolViewModel

@{
    ViewData["Title"] = "Deny Pending School";
}

<h2 class="text-center">Deny School</h2>
<hr />
<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <h4><b>Name:</b> @Model.name</h4>
        <p><b>City:</b> @Model.city</p>
        <p><b>State:</b> @Model.state</p>
    </div>
</div>
<hr />

<div class="text-center">
    <form asp-controller="PendingSchool" asp-action="Deny">
        <div class="form-actions no-color">
            <a asp-action="Manage" class="btn btn-primary">Cancel</a>
            <input type="button" value="Deny" class="btn btn-danger" data-toggle="modal" data-target="#denyModal" />
        </div>
        <!-- Modal -->
        <div class="modal fade" id="denyModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header alert-danger">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Deny Confirmation</h4>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to deny <b>@Model.name</b>?</p>
                        <p>Users will not be able to select this as their school.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Not Sure</button>
                        <button type="submit" class="btn btn-success">Yes</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
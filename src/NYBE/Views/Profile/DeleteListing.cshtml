@model NYBE.Models.DataModels.EditListingViewModel

@{
    ViewData["Title"] = "Delete Listing";
}

<h2 class="text-center">Delete Listing</h2>

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <hr />
        <h3 class="text-center" style="color:forestgreen;">@(Model.price > 0 ? "$" + @Model.price : "Trade")</h3>
        <br />
        <div class="form-group">
            <div class="col-sm-2 col-sm-offset-1">
                @if (Model.book.Image != null)
                {
                    <img src="@Model.book.Image" class="img-responsive" style="max-width:150px; max-height:200px;" />
                }
                else
                {
                    <i class="glyphicon glyphicon-book" style="font-size:200px; color:dimgrey;"></i>
                }
            </div>
            <div class="col-sm-8 col-sm-offset-1">
                <p><b>Author:</b> @Model.book.AuthorFName @Model.book.AuthorLName</p>
                @if (!String.IsNullOrEmpty(Model.book.Edition))
                {
                    <p><b>@Model.book.Edition Edition</b></p>
                }
                <p><b>ISBN:</b> @Model.book.ISBN</p>
                <p><b>Description:</b> @Model.book.Description</p>
                <p><b>Publisher:</b> @Model.book.Publisher</p>
                <p><b>Condition: </b>@Model.condition</p>
                <p><b>Course:</b> @Model.course.Dept @Model.course.CourseNum - @Model.course.Name</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <hr />
        <div class="text-center">
            <form asp-controller="Profile" asp-action="DeleteListing">
                <a asp-action="Index" class="btn btn-primary">Cancel</a>
                <input type="button" value="Delete" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" />
                <!-- Modal -->
                <div class="modal fade" id="deleteModal" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header alert-danger">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Delete Confirmation</h4>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete this listing?</p>
                                <p>Users will not be able to see this any listing longer.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Not Sure</button>
                                <button type="submit" class="btn btn-success">Yes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

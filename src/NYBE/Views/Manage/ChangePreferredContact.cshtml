@{
    ViewData["Title"] = "Change Contact Preference";
}

<h2 class="text-center">Change Contact Preference</h2>

<div class="row">
    <div class="col-sm-10 col-sm-offset-2">
        <form asp-controller="Manage" asp-action="ChangePreferredContact" method="post" class="form-horizontal">
            <hr />
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <select  id="contactPref" name="contactPref" class="form-control">
                        <option value="0">Email</option>
                        <option value="1">Call</option>
                        <option value="2">Text</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-4">
                    <button type="button" onclick="history.go(-1)" class="btn btn-primary">Cancel</button>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-sm-10 col-sm-offset-2">
        <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
            <hr />
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <input asp-for="OldPassword" class="form-control" placeholder="Old Password" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <input asp-for="NewPassword" class="form-control" placeholder="New Password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm New Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-4">
                    <button type="button" onclick="history.go(-1)" class="btn btn-primary">Cancel</button>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
